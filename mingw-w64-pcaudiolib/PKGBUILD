# Maintainer: Michael Rans <rans@email.com>

_realname=pcaudiolib
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.3+21cc838
pkgrel=1
pkgdesc="A portable cross-platform audio library"
arch=('any')
mingw_arch=('mingw32' 'mingw64' 'ucrt64' 'clang64' 'clangarm64')
url="https://github.com/espeak-ng/pcaudiolib"
license=("LGPL")
makedepends=("${MINGW_PACKAGE_PREFIX}-cc" "${MINGW_PACKAGE_PREFIX}-autotools" "git" "rsync")
depends=("${MINGW_PACKAGE_PREFIX}-cc-libs")
_commit=f4878366a16601244a497e07f88178ba16445b84
source=("git+https://github.com/mcarans/pcaudiolib#commit=${_commit}")
sha256sums=('40b7007c68117aacb3cc70fc62f0fe6e8dde832b362ccfc50d88fd1e7e501561')

pkgver() {
  cd "$srcdir/$_gitname"
  # Use short hash
  printf "%s" "1.3+$(git rev-parse --short HEAD)"
}

prepare() {
  cd pcaudiolib
  ./autogen.sh
}

build() {
  rsync --recursive --times --links "${srcdir}/${_realname}/src/include"/* "${srcdir}/build-${MSYSTEM}"
  mkdir -p "${srcdir}/build-${MSYSTEM}" && cd "${srcdir}/build-${MSYSTEM}"

  ../pcaudiolib/configure \
    --prefix=${MINGW_PREFIX} \
    --build=${MINGW_CHOST} \
    --host=${MINGW_CHOST}

  make LIBTOOLFLAGS=-v
}

check() {
  cd "${srcdir}/build-${MSYSTEM}"
}

package() {
  cd "${srcdir}/build-${MSYSTEM}"

  make DESTDIR="${pkgdir}" install
  
  install -Dm644 "${srcdir}/${_realname}/COPYING" "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/COPYING" 
}
