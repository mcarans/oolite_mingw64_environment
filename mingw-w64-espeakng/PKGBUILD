# Maintainer: Michael Rans <rans@email.com>

_realname=espeak-ng
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.52+b76579a
pkgrel=1
pkgdesc="A text-to-speech synthesizer for Linux, Windows, Android and other operating systems"
arch=('any')
mingw_arch=('mingw32' 'mingw64' 'ucrt64' 'clang64' 'clangarm64')
url="https://github.com/espeak-ng/espeak-ng"
license=("LGPL")
makedepends=("${MINGW_PACKAGE_PREFIX}-cc" "${MINGW_PACKAGE_PREFIX}-cmake" "${MINGW_PACKAGE_PREFIX}-ninja" "git")
depends=("${MINGW_PACKAGE_PREFIX}-cc-libs")
_commit=67d8e09ae8c3378a6e9862fc319d9991a4a9dd88
source=("git+https://github.com/mcarans/espeak-ng#commit=${_commit}")
sha256sums=('5ddff58177dae1aaed446c20d697126fa4b042471da409eb23f0ab92fc88b985')

pkgver() {
  cd "$srcdir/$_gitname"
  # Use short hash
  printf "%s" "1.52+$(git rev-parse --short HEAD)"
}

build() {
  declare -a extra_config
  if check_option "debug" "n"; then
    extra_config+=("-DCMAKE_BUILD_TYPE=Release")
  else
    extra_config+=("-DCMAKE_BUILD_TYPE=Debug")
  fi
 
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
  cmake \
    -GNinja \
    -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
    -DBUILD_SHARED_LIBS=YES \
	-DHAVE_PTHREAD=yes \
    ${extra_config[@]} \
    -S ${_realname} \
    -B build-${MSYSTEM}

  cmake --build build-${MSYSTEM}

}

check() {
  cd "${srcdir}/build-${MSYSTEM}"
}

package() {
  DESTDIR="${pkgdir}" cmake --install build-${MSYSTEM}
  
  install -Dm644 "${srcdir}/${_realname}/COPYING" "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/COPYING" 
}
